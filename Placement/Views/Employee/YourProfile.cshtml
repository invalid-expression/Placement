@model Employee

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="~/images/@Model.ProfilePicture" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                               
                             <h5 class="my-3">@Model.ID @Model.Name</h5>

                        <p class="text-muted mb-1">Experience Employee At</p>
                        <p class="text-muted mb-4">Bay Area, San Francisco, CA</p>

                        <div class="d-flex justify-content-center mb-2">
                            <a class="btn btn-primary me-2" href="@Url.Action("UpdateEmployee", "Employee", new {Id = Model.ID})">Edit</a>
                           
                            <a class="btn btn-danger me-2" href="@Url.Action("DeleteEmployee", "Employee", new {ID = Model.ID})">Delete</a>
                        </div>
                    </div>
                </div>
               
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Name</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Email</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Mobile</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Contact</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Address</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Status</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@(Model.IsActive == true ? "Active" : "Not Active")</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Registration Date & Time</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">14/08/2016 14:00</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Registration Incharge</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">Maddy</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Update</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">Nothing Update Yet</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Update Inchrge</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">Nobody Updated Yet</p>
                            </div>
                        </div>
                    </div>
 
                </div>
            </div>
        </div>
    </div>
</section>